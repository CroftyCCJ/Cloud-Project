
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class=" row">
    <div class="col">
        <h2>
            @ViewBag.Recipe.Name
        </h2>
    </div>
    <div class="col">
        <p class="card-text text-right"><small class="text-muted">Cuisine: @ViewBag.Recipe.Cuisine</small></p>
    </div>

</div>

<hr />
<img src="@ViewBag.Recipe.ImageUrl" class="img-fluid" alt="Responsive image">
<hr />
<h2>Ingredients</h2>
<p>@ViewBag.Recipe.Ingredients</p>
<hr />
<h2>Description</h2>
<p>@ViewBag.Recipe.Process</p>
<br />
