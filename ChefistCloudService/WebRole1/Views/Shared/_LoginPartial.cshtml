@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Auth", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
    <ul  class="navbar-nav">
        <li class="nav-item dropdown">
            @* "Home" controller needs to be replaced with "Manage" later *@
            @*@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Home", routeValues: null, htmlAttributes: new { title = "Home" })*@
         
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Profile", new { controller = "User" }, new { @class = "nav-link " })
           
        </li>


        <li class="nav-item">
            <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-dark">Log off</a>
        </li>
    </ul>
        }
        }
        else
        {
        <li class="nav-item">
            @Html.ActionLink("Login/Register", "Login", new { controller = "Auth" }, new { @class = "btn btn-primary" })
        </li>

        }
